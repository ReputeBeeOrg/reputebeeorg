---
const { heading, image, image_alt,
         cta='Get your Wall of Love Now',
         isReversed = false } = Astro.props;
---
<section class="bg-white dark:bg-gray-900">
    <div class="gap-8 items-center py-8 px-4 mx-auto max-w-screen-xl xl:gap-16 md:grid  md:grid-cols-2 sm:py-16 lg:px-6">
        <img class="mx-auto w-full rounded-lg bg-gray-500 shadow-lg"
                  width={500}
                  height={500}
                  widths={[400, 768]}
                  sizes="(max-width: 768px) 100vw, 432px"
                  layout="responsive" src={image} alt="{image_alt}"/> 
        <div class={`mt-4 md:mt-0 ${isReversed ? 'order-first' : ''}`}>
            <h2 class="mb-4 text-3xl tracking-tight font-medium leading-snug font-heading text-gray-900 dark:text-white">{heading}</h2>
            <p class="mb-6  text-gray-700 text-base dark:text-gray-200"><slot/></p>
            <a href="https://app.reputebee.com/accounts/signup/?next=/" class="inline-flex items-center text-white bg-primary-700 hover:bg-primary-800 focus:ring-4 tracking-wide focus:ring-primary-300 font-bold uppercase rounded-lg text-sm px-5 py-2.5 text-center dark:focus:ring-primary-900">
                {cta}
                <svg class="ml-2 -mr-1 w-5 h-5" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd"></path></svg>
            </a>
        </div>
    </div>
</section>